<% page_title edition_page_title(@document), "Statistical data sets" %>
<% page_class "statistical-data-set" %>

<%= content_tag_for :article, @document, nil, class: "document-page #{@document.type.downcase}" do %>
  <header class="block headings-block">
    <div class="inner-block floated-children">
      <%= render  partial: 'header',
                  locals: {
                    header_title: "Statistical data set",
                    document: @document,
                    footer_meta: true,
                    policies: @related_policies
                  } %>
    </div>
  </header>

  <div class="block">
    <div class="inner-block">
      <%= render partial: "document_summary", locals: { document: @document } %>
    </div>
  </div>

  <div class="block-2 ">
    <div class="inner-block">
      <% headers = govspeak_headers(@document.body) %>
      <% if headers.any? %>
        <div class="contextual-info">
          <nav>
            <h1>Contents</h1>
            <ol>
              <% headers.each do |header| %>
                <li><%= link_to header.text, "##{header.id}" %></li>
              <% end %>
            </ol>
          </nav>
        </div>
      <% end %>
    </div>
  </div>

  <div class="block-3">
    <div class="inner-block">
      <div class="document body">
        <%= govspeak_edition_to_html @document %>
      </div>
    </div>
  </div>
  <div class="block-5">
    <div class="inner-block">
      <%= render partial: 'documents/document_footer_meta', locals: { document: @document, policies: @related_policies } %>
    </div>
  </div>
<% end %>
